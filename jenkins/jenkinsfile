pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/davidamir94/api-testing-with-node'
                sh 'npm install'
            }
        }
        stage('Start & Test') {
            steps {
                parallel(
                  start: {
                        sh "timeout 8 npm start || exit 0"
                  },
                  test: {
                        sh 'sleep 5'
                        sh "npm test"
                  }
                )
            }
            post {
                success {
                    sh 'docker build . -t davidamir94/itay_api_test:${BUILD_NUMBER}'
                    sh 'docker push davidamir94/itay_api_test:${BUILD_NUMBER}'
                }
            }
        }
    }
}
